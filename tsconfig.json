{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
  	},
  	"exclude": ["node_modules", ".yarn", ".vscode", ".github", "dist"]
}