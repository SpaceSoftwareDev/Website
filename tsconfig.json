{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"baseUrl": "."
  	},
  	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  	"references": [{ "path": "./tsconfig.node.json" }]
}